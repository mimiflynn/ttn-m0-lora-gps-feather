// LoRaWAN NwkSKey, network session key
// This is the default Semtech key, which is used by the early prototype TTN
// network.
static const PROGMEM u1_t NWKSKEY[16] = { 0x40, 0x33, 0x06, 0x08, 0x67, 0x9A, 0xEC, 0x47, 0xCB, 0x18, 0x97, 0x0F, 0x62, 0x8A, 0x4D, 0xD3 };

// LoRaWAN AppSKey, application session key
// This is the default Semtech key, which is used by the early prototype TTN
// network.
static const u1_t PROGMEM APPSKEY[16] = { 0x95, 0xA9, 0xB2, 0x94, 0x6D, 0x14, 0x53, 0x8D, 0xCB, 0x90, 0xD3, 0xBA, 0xA7, 0xBE, 0x36, 0x56 };

// LoRaWAN end-device address (DevAddr)
static const u4_t DEVADDR = 0x13ED3686; // <-- Change this address for every node!

